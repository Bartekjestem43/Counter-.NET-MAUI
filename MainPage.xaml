<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Counter.MainPage"
             Title="Counter">

    <ScrollView>
        <VerticalStackLayout Padding="20">

            <Label Text="Add New Counter" FontAttributes="Bold" FontSize="30" HorizontalTextAlignment="Center"/>

            <Entry x:Name="nameEntry" Placeholder="Counter name"/>
            <Entry x:Name="startValueEntry" Placeholder="Start value"/>
            <Entry x:Name="colorEntry" Placeholder="Color (example: Red or #00FF00)"/>

            <Button Text="Add Counter" Clicked="OnAddCounterClicked"/>

            <Button Text="Reset All" Clicked="OnResetAllClicked" BackgroundColor="LightGray"/>

            <CollectionView x:Name="counterList" Margin="0,20,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5"
                               BackgroundColor="{Binding Color}"
                               Padding="10" CornerRadius="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Value}" FontSize="24" HorizontalOptions="Center"/>
                                <HorizontalStackLayout HorizontalOptions="Center">
                                    <Button Text="-" Clicked="OnMinusClicked"/>
                                    <Button Text="+" Clicked="OnPlusClicked"/>
                                    <Button Text="🗑" Clicked="OnDeleteClicked"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
